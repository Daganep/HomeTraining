<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgramsLevelText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ProgramLevelTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@drawable/rounded_background_10</item>
        <item name="tabTextAppearance">@style/ProgramsLevelText</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabMode">auto</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/no_focus_text</item>
        <item name="tabIndicatorColor">@color/blue_dark</item>
        <item name="tabIndicator">@drawable/program_level_tab_layout_indicator</item>
    </style>
</resources>
