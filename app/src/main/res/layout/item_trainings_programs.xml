<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/default_horizontal_padding"
    android:clipToPadding="false"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/program_full_body"
            android:layout_width="330dp"
            android:layout_height="270dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/image_program_full_7x4"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/content_description_training_program"/>

            <TextView
                android:id="@+id/full_body_program_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="140dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="программа 7Х4\nвсё тело"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="программа 7Х4\nвсё тело"/>

            <TextView
                android:id="@+id/full_body_program_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="4% закончить"
                app:layout_constraintTop_toBottomOf="@id/full_body_program_name"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="4% закончить"/>

            <TextView
                android:id="@+id/full_body_program_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="1-й день"
                app:layout_constraintTop_toBottomOf="@id/full_body_program_percent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="1-й день"/>

            <View
                android:id="@+id/full_body_program_begin_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/margin_default"
                android:background="@drawable/rounded_background_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/full_body_program_begin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:text="Начать"
                app:layout_constraintTop_toTopOf="@id/full_body_program_begin_button"
                app:layout_constraintBottom_toBottomOf="@id/full_body_program_begin_button"
                app:layout_constraintStart_toStartOf="@id/full_body_program_begin_button"
                app:layout_constraintEnd_toEndOf="@id/full_body_program_begin_button"
                tools:text="Начать"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/program_down_body"
            android:layout_width="330dp"
            android:layout_height="270dp"
            android:layout_marginStart="@dimen/margin_medium">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/image_program_down_7x4"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/content_description_training_program"/>

            <TextView
                android:id="@+id/down_body_program_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="140dp"
                android:maxLines="3"
                android:textAllCaps="true"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Нижняя часть тела про"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Нижняя часть тела про"/>

            <TextView
                android:id="@+id/down_body_program_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Всего за 4 недели укрепите ноги, увеличьте силу нижней части тела и улучшите свою общую физическую подготовку"
                app:layout_constraintBottom_toTopOf="@id/down_body_program_begin_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Всего за 4 недели укрепите ноги, увеличьте силу нижней части тела и улучшите свою общую физическую подготовку"/>

            <View
                android:id="@+id/down_body_program_begin_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/margin_default"
                android:background="@drawable/rounded_background_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/down_body_program_begin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:text="Начать"
                app:layout_constraintTop_toTopOf="@id/down_body_program_begin_button"
                app:layout_constraintBottom_toBottomOf="@id/down_body_program_begin_button"
                app:layout_constraintStart_toStartOf="@id/down_body_program_begin_button"
                app:layout_constraintEnd_toEndOf="@id/down_body_program_begin_button"
                tools:text="Начать"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</HorizontalScrollView>
