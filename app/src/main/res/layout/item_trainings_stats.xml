<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/trainings_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAllCaps="true"
        android:text="тренировки"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/calories_label"
        app:layout_constraintTop_toBottomOf="@id/trainings_number"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/calories_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="ккал"
        app:layout_constraintStart_toEndOf="@id/trainings_label"
        app:layout_constraintEnd_toStartOf="@id/minutes_label"
        app:layout_constraintTop_toBottomOf="@id/calories_number"/>

    <TextView
        android:id="@+id/minutes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:textAllCaps="true"
        android:text="минут"
        app:layout_constraintStart_toEndOf="@id/calories_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minutes_number"/>

    <TextView
        android:id="@+id/trainings_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/trainings_label"
        app:layout_constraintEnd_toEndOf="@id/trainings_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="32"/>

    <TextView
        android:id="@+id/calories_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/calories_label"
        app:layout_constraintEnd_toEndOf="@id/calories_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6808"/>

    <TextView
        android:id="@+id/minutes_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/minutes_label"
        app:layout_constraintEnd_toEndOf="@id/minutes_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="393"/>

</androidx.constraintlayout.widget.ConstraintLayout>
