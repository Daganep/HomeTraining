<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/default_horizontal_padding"
    android:clipToPadding="false"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/beginner_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новичок"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/advanced_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:text="Продолжающий"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prof_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:text="Продвинутый"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</HorizontalScrollView>
